{% extends "::base.html.twig" %}

{% block body %}

<h2>Transport</h2>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Transport</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Action</th>
    </tr>
  </thead>
  {% for transport in transports %}
  <tbody>
    <tr>
      <td>{{ transport.domain }}</td>
      <td>{{ transport.transport }}</td>
      <td>{{ transport.createdAt|date('Y-m-d H:i:s') }}</td>
      <td>{{ transport.updatedAt|date('Y-m-d H:i:s') }}</td>
      <td>
        <a href="{{ path('update', {'id':transport.id}) }}">Update</a> |
        <a href="{{ path('delete', {'id':transport.id}) }}">Delete</a>
        </td>
    </tr>
  </tbody>
  {% endfor %}
</table>

{% endblock %}
